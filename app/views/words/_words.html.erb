<% @song.words.each do |word| %>
 <div class="panel panel-default">
 <div class="panel-heading">   
    <h2 class="panel-title"><%= word.mot %></h2>
 </div>
 <div class="panel-body">  
 <table class="table">
  <tr>
    <th>Meaning: </th>
    <td><%= word.meaning %></td> 
  </tr>
  <tr>
    <th>Origin:</th>
    <td><%= word.origin %></td> 
  </tr>
  <tr>
    <th>Speech:</th>
    <td><%= word.word_speech %></td> 
  </tr>
  <tr>
    <th>Example:</th>
    <td><%= word.example %></td> 
  </tr>
  <% if @song.user == current_user %> 
  <tr>
    <td colspan="2"><%= link_to "Delete", [word.song, word], method: :delete, data: { confirm: 'Are you sure super stupid?'}, :class => "btn btn-danger btn-sm" %><td>
  </tr>
  <% end %>
  </table>
</div>
</div>  
<% end %>
